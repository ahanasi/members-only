<section class="section">
  <div class="container">
    <div class="columns is-mobile is-centered is-vcentered">
      <div class="column is-one-third">
        <h2 class="title">Log In</h2>
        <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="field">
            <div class="control">
              <%= f.input :email,
                          required: false,
                          autofocus: true,
                          input_html: { class: "input" },
                          wrapper: false,
                          label_html: { class: "label" } %>
            </div>
          </div>

          <div class="field">
            <div class="control">
              <%= f.input :password,
                          required: false,
                          input_html: { class: "input" },
                          wrapper: false,
                          label_html: { class: "label" } %>
            </div>
          </div>

          <div class="field">
            <div class="control">
                  <%= f.input :remember_me,
                              inline_label: "Remember me",
                              wrapper: false,
                              as: :boolean if devise_mapping.rememberable? %>
            </div>
          </div>

          <div class="field is-grouped">
            <div class="control">
              <%= f.button :submit, "Log in", class: "button is-link" %>
            </div>
            <div class="control">
              <%= link_to "Cancel", root_path, { :class => "button is-link is-light" } %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</section>

<div class="container">
  <div class="columns is-mobile is-centered is-vcentered">
    <div class="column is-one-third">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
<div class="column is-three-fifths">
    <% if user_signed_in? %>
        <article class="media box">
            <figure class="media-left">
              <div class="columns is-centered is-mobile is-vcentered">
                <div class="column has-text-centered">
                  <div class="image is-48x48">
                    <%= gravatar_image_tag(current_user.email, size: 48, alt: "current_user.name", :gravatar => { :secure => true }, class: "is-rounded") %> 
                </div>
              </div>
            </figure>
            <div class="media-content">
              <div class="content">
                <a href="/posts/new">
                  <input type="text" class="input" placeholder="Create Post">
                </a>
              </div>
            </div>
        </article>
    <% end %>
  
    <% @posts.each do |post| %>
    <div class="box">
      <article class="media">
        <figure class="media-left">
            <div class="columns is-centered is-mobile is-vcentered">
            <div class="column has-text-centered">
                <div class="image is-64x64">
                  <%= gravatar_image_tag(post.user.email, size: 64, alt: "post.user.name", :gravatar => { :secure => true }, class: "is-rounded") %>
                </div>
                <% if user_signed_in? %>
                <small><%= post.user.name %></small>
                <% end %>
            </div>
            </div>
        </figure>
        <div class="media-content">
            <div class="content">
              <p>
                  <strong><%= post.title %></strong>
                  <br>
                  <%= post.post %>
              </p>
            </div>
        </div>
      </article>
    </div>
    <% end %>  
</div>

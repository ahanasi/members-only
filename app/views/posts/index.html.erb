<h1>Posts</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <div class="div">
        <h3><%= post.title %></h3>
        <p><%= post.post %></p>
        <p>Created By: <%= post.user.name %></p>
      </div>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to "New Post", new_post_path %>
